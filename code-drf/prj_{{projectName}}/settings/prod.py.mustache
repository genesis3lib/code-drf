from .base import *
import os
import secrets

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a secure random key - in production, use environment variable or secrets manager
SECRET_KEY = os.getenv('DJANGO_SECRET_KEY', secrets.token_urlsafe(50))

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG = False

# Production hosts - includes localhost for health checks from ALB
# APP_ENV_HOST is set by init.sh based on environment (e.g., https://myapp-api.example.com)
ALLOWED_HOSTS = [
    'localhost',
    '127.0.0.1',
]

# Parse APP_ENV_HOST to extract hostname for ALLOWED_HOSTS
app_env_host = os.getenv('APP_ENV_HOST', '')
if app_env_host:
    # Extract hostname from URL (e.g., https://myapp-api.example.com -> myapp-api.example.com)
    from urllib.parse import urlparse
    parsed = urlparse(app_env_host)
    if parsed.netloc:
        ALLOWED_HOSTS.append(parsed.netloc)
    elif parsed.path:
        # Handle case where URL is just hostname without scheme
        ALLOWED_HOSTS.append(parsed.path)

# Allow additional hosts from environment variable (comma-separated)
extra_hosts = os.getenv('DJANGO_ALLOWED_HOSTS', '')
if extra_hosts:
    ALLOWED_HOSTS.extend([h.strip() for h in extra_hosts.split(',') if h.strip()])

