# Allowed hosts
ALLOWED_HOSTS = [
    'localhost',
    '127.0.0.1',
]

# Add host from APP_ENV_HOST if set
app_env_host = os.getenv('APP_ENV_HOST', '')
if app_env_host:
    from urllib.parse import urlparse
    parsed = urlparse(app_env_host)
    if parsed.netloc:
        ALLOWED_HOSTS.append(parsed.netloc)
    elif parsed.path:
        ALLOWED_HOSTS.append(parsed.path)

{{#isProduction}}
# Allow additional hosts from environment variable (comma-separated)
extra_hosts = os.getenv('DJANGO_ALLOWED_HOSTS', '')
if extra_hosts:
    ALLOWED_HOSTS.extend([h.strip() for h in extra_hosts.split(',') if h.strip()])

# Add EC2 private IP for ALB health checks (ALB uses private IP as Host header)
# This fetches the instance's private IP from EC2 metadata service
try:
    import urllib.request
    # IMDSv2 requires a token
    token_request = urllib.request.Request(
        'http://169.254.169.254/latest/api/token',
        headers={'X-aws-ec2-metadata-token-ttl-seconds': '21600'},
        method='PUT'
    )
    with urllib.request.urlopen(token_request, timeout=1) as response:
        token = response.read().decode()

    ip_request = urllib.request.Request(
        'http://169.254.169.254/latest/meta-data/local-ipv4',
        headers={'X-aws-ec2-metadata-token': token}
    )
    with urllib.request.urlopen(ip_request, timeout=1) as response:
        ec2_private_ip = response.read().decode().strip()
        if ec2_private_ip:
            ALLOWED_HOSTS.append(ec2_private_ip)
            logger.info(f"Added EC2 private IP to ALLOWED_HOSTS: {ec2_private_ip}")
except Exception as e:
    # Not running on EC2 or metadata service unavailable - ignore
    logger.debug(f"Could not fetch EC2 metadata (not on EC2 or IMDS unavailable): {e}")
