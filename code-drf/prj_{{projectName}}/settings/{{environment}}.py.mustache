# Add EC2 private IP for ALB health checks (ALB uses private IP as Host header)
# This fetches the instance's private IP from EC2 metadata service (IMDSv2)
# Works on any EC2 instance regardless of environment (dev, staging, prod, etc.)
try:
    import urllib.request
    # IMDSv2 requires a token
    _token_request = urllib.request.Request(
        'http://169.254.169.254/latest/api/token',
        headers={'X-aws-ec2-metadata-token-ttl-seconds': '21600'},
        method='PUT'
    )
    with urllib.request.urlopen(_token_request, timeout=1) as _response:
        _token = _response.read().decode()

    _ip_request = urllib.request.Request(
        'http://169.254.169.254/latest/meta-data/local-ipv4',
        headers={'X-aws-ec2-metadata-token': _token}
    )
    with urllib.request.urlopen(_ip_request, timeout=1) as _response:
        _ec2_private_ip = _response.read().decode().strip()
        if _ec2_private_ip:
            ALLOWED_HOSTS.append(_ec2_private_ip)
except Exception:
    # Not running on EC2 or metadata service unavailable - ignore silently
    pass

