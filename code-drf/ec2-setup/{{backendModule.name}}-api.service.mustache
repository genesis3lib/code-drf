[Unit]
Description={{projectName}} API Service (Gunicorn)
After=network.target
Wants=network.target

[Service]
Type=notify
User={{backendModule.name}}
Group={{backendModule.name}}
WorkingDirectory=/opt/{{backendModule.name}}/app
EnvironmentFile=-/opt/{{backendModule.name}}/env/django.env
ExecStart=/opt/{{backendModule.name}}/venv/bin/gunicorn \
    --workers 3 \
    --bind 0.0.0.0:8080 \
    --access-logfile /opt/{{backendModule.name}}/logs/access.log \
    --error-logfile /opt/{{backendModule.name}}/logs/error.log \
    --capture-output \
    --enable-stdio-inheritance \
    --timeout 120 \
    prj_{{projectName}}.wsgi:application
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=10
KillMode=mixed
TimeoutStopSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier={{backendModule.name}}

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/opt/{{backendModule.name}}

# Resource limits (optional - adjust as needed)
LimitNOFILE=65536
LimitNPROC=4096

[Install]
WantedBy=multi-user.target
