{
  "version": "3.0.0",
  "metadata": {
    "id": "code-drf",
    "name": "Django REST Framework Backend",
    "kind": "code",
    "layers": [
      "backend",
      "cicd"
    ],
    "type": "drf",
    "description": "Bare minimum Django REST Framework API skeleton",
    "version": "1.0.0",
    "author": "Genesis Team",
    "tags": [
      "django",
      "drf",
      "python",
      "backend",
      "rest-api"
    ],
    "providers": [
      "aws"
    ],
    "providesFragments": {
      "backend-api": {
        "mode": "warn"
      }
    },
    "onWarn": {
      "message": "Multiple backend frameworks selected. This is unusual but allowed if you need multiple API services."
    }
  },
  "scaffoldConfigTemplate": [
    {
      "key": "pythonVersion",
      "label": "Python Version",
      "type": "select",
      "options": [
        "3.12"
      ],
      "default": "3.12",
      "required": true,
      "description": "Python language version",
      "category": "build"
    },
    {
      "key": "djangoVersion",
      "label": "Django Version",
      "type": "select",
      "options": [
        "5.2"
      ],
      "default": "5.2",
      "required": true,
      "description": "Django framework version (LTS)",
      "category": "build"
    },
    {
      "key": "drfVersion",
      "label": "Django REST Framework Version",
      "type": "select",
      "options": [
        "3.16"
      ],
      "default": "3.16",
      "required": true,
      "description": "Django REST Framework version",
      "category": "build"
    }
  ],
  "dependencies": {
    "pip": [
      "Django==5.2",
      "djangorestframework==3.16",
      "django-cors-headers==4.3.1",
      "drf-spectacular==0.27.2",
      "gunicorn==21.2.0",
      "python-dotenv==1.0.0",
      "pytest==8.0.0",
      "pytest-django==4.8.0"
    ]
  },
  "runtimeConfigTemplate": [
    {
      "key": "APP_NAME",
      "description": "Application name",
      "example": "{{projectName}}",
      "default": "runtime",
      "required": false,
      "secret": false,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": true
    },
    {
      "key": "APP_ENV_HOST",
      "description": "Backend API base URL",
      "example": "https://{{projectName}}-api{{envSuffix}}.{{domain}}",
      "default": "runtime",
      "required": true,
      "secret": false,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": false
    },
    {
      "key": "APP_ENV_UI",
      "description": "Frontend application URL",
      "example": "https://{{projectName}}{{envSuffix}}.{{domain}}",
      "default": "runtime",
      "required": true,
      "secret": false,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": false
    }
  ],
  "generation": {
    "files": {
      "remove": []
    },
    "layers": {
      "backend": {},
      "cicd": {}
    }
  },
  "gitignore": [
    "# Python",
    "__pycache__/",
    "*.py[cod]",
    "*$py.class",
    "*.so",
    ".Python",
    "build/",
    "develop-eggs/",
    "dist/",
    "downloads/",
    "eggs/",
    ".eggs/",
    "lib/",
    "lib64/",
    "parts/",
    "sdist/",
    "var/",
    "wheels/",
    "*.egg-info/",
    ".installed.cfg",
    "*.egg",
    "",
    "# Virtual environments",
    "venv/",
    "ENV/",
    "env/",
    ".venv/",
    "",
    "# Django",
    "*.log",
    "local_settings.py",
    "db.sqlite3",
    "db.sqlite3-journal",
    "staticfiles/",
    "media/",
    "",
    "# pytest",
    ".pytest_cache/",
    ".coverage",
    "htmlcov/",
    "",
    "# IDE",
    ".idea/",
    ".vscode/",
    "*.swp",
    "*.swo"
  ]
}